<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2994C5">

    <!-- Main Content (Weight pushes nav bar down) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:elevation="6dp"
        android:layout_margin="12dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_marginBottom="10dp"
        android:clipToPadding="false">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/user_prof"
            android:scaleType="centerCrop"

            android:elevation="4dp"
            android:padding="8dp"/>

        <!-- Name -->
        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark Ian Frost"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="12dp"/>

        <!-- Email -->
        <TextView
            android:id="@+id/person_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="markianfrost123@gmail.com"
            android:textSize="16sp"
            android:textColor="#777777"
            android:layout_marginTop="4dp"/>

        <!-- Phone -->
        <TextView
            android:id="@+id/person_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž 09285689462"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp"/>

        <!-- Address -->
        <TextView
            android:id="@+id/person_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ New York"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp"/>

        <!-- Edit Button -->
        <Button
            android:id="@+id/edit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginTop="16dp"

            android:elevation="6dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingVertical="12dp"/>
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home"
            android:contentDescription="Home"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/cart_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cart1"
            android:contentDescription="Cart"
            android:padding="8dp"
            android:layout_marginStart="40dp"/>

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_prof"
            android:contentDescription="Profile"
            android:padding="8dp"
            android:layout_marginStart="40dp"/>

        <ImageView
            android:id="@+id/my_explore"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search"
            android:contentDescription="Explore"
            android:padding="8dp"
            android:layout_marginStart="40dp"/>
    </LinearLayout>

</LinearLayout>
